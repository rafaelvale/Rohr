<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rohr.coletorinterno.rohr.AdicionaFoto"
    tools:showIn="@layout/activity_adiciona_foto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Dianteria"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Traseira"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_below="@+id/foto_dianteria_2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Chassi"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/foto_traseira_2"
        android:layout_toStartOf="@+id/foto_traseira_2"
        android:layout_marginBottom="76dp" />

    <Space
        android:layout_width="150px"
        android:layout_height="150px"
        android:textColor="#000000"
        android:id="@+id/foto_dianteria_1"
        android:layout_alignTop="@+id/foto_dianteria_2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Space
        android:layout_width="150px"
        android:layout_height="150px"
        android:textColor="#000000"
        android:id="@+id/foto_dianteria_2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Space
        android:layout_width="150px"
        android:layout_height="150px"
        android:textColor="#000000"
        android:id="@+id/foto_traseira_2"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/foto_dianteria_2"
        android:layout_alignStart="@+id/foto_dianteria_2" />

    <Space
        android:layout_width="150px"
        android:layout_height="150px"
        android:textColor="#000000"
        android:id="@+id/foto_traseira_1"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <Space
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:id="@+id/foto_chassi" />


</RelativeLayout>
